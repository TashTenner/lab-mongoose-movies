<h2>Celebrities</h2>
<ul>
  {{#each celebrities}}
  {{#if @first}}
  <li><b><a href="/celebrities/{{this._id}}">{{ this.name }} </a> </b></li>
  {{else if @last}}
  <li><b><a href="/celebrities/{{this._id}}">{{ this.name }} </a> </b></li>
  {{else}}
  <li><a href="/celebrities/{{this._id}}">{{ this.name }} </a> </li>
  {{/if}}
  {{/each}}
</ul>
<a href="/celebrities/new">Add new celebrity</a>





